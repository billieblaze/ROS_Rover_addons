<?xml version="1.0"?>
<robot name="myfirst">
  <material name="green">
     <color rgba="0 0.8 0 1"/>
   </material>

   <material name="black">
   <color rgba="0 0 0 1"/>
 </material>

 <material name="gold">
   <color rgba="0.5 0.5 0.5 1"/>
 </material>


  <link name="base_link">
    <visual>
      <geometry>
        <box size=".6 .6 .3"/>
      </geometry>
      <material name="green"/>
      <origin rpy="0 0 0" xyz="0 0 0.25"/>
    </visual>
  </link>
  <link name="neck">
    <visual>
      <geometry>
        <cylinder length="0.2" radius="0.05"/>
      </geometry>
      <material name="black"/>
      <origin rpy="0 0 0" xyz="0 0 0.5"/>
    </visual>
  </link>

  <joint name="base_to_neck" type="fixed">
    <parent link="base_link"/>
    <child link="neck"/>
  </joint>


  <link name="fcu">
    <visual>
      <geometry>
        <box size=".3 .2 .15"/>
      </geometry>
      <material name="gold"/>
      <origin rpy="0 0 0" xyz="0 0 0.6"/>
    </visual>
  </link>

  <joint name="neck_to_head" type="fixed">
    <parent link="neck"/>
    <child link="fcu"/>
  </joint>

  <link name="wheel1">
      <visual>
        <geometry>
          <cylinder length="0.1" radius="0.1"/>
        </geometry>
        <material name="black"/>
        <origin rpy="1.55 0 0" xyz="-.34 -.3 0.1"/>
      </visual>
    </link>
  <link name="wheel2">
      <visual>
        <geometry>
          <cylinder length="0.1" radius="0.1"/>
        </geometry>
        <material name="black"/>
        <origin rpy="1.55 0 0" xyz="-.34 .3 0.1"/>
      </visual>
    </link>
  <link name="wheel3">
      <visual>
        <geometry>
          <cylinder length="0.1" radius="0.15"/>
        </geometry>
        <material name="black"/>
        <origin rpy="1.55 0 0" xyz=".25 .3 0.15"/>
      </visual>
    </link>
  <link name="wheel4">
      <visual>
        <geometry>
          <cylinder length="0.1" radius="0.15"/>
        </geometry>
        <material name="black"/>
        <origin rpy="1.55 0 0" xyz=".25 -.3 0.15"/>
      </visual>
    </link>
    <joint name="base_to_wheel1" type="fixed">
      <parent link="base_link"/>
      <child link="wheel1"/>
    </joint>
    <joint name="base_to_wheel2" type="fixed">
      <parent link="base_link"/>
      <child link="wheel2"/>
    </joint>
    <joint name="base_to_wheel3" type="fixed">
      <parent link="base_link"/>
      <child link="wheel3"/>
    </joint>
    <joint name="base_to_wheel4" type="fixed">
      <parent link="base_link"/>
      <child link="wheel4"/>
    </joint>
 <link name="mount1">
    <visual>
      <geometry>
        <box size=".02 .02 .2"/>
      </geometry>
      <material name="black"/>
      <origin rpy="1.55 1.55 1.55" xyz=".3 0 0.1"/>
    </visual>
  </link>
	<link name="mount2">
    <visual>
      <geometry>
        <box size=".02 .02 .2"/>
      </geometry>
      <material name="black"/>
      <origin rpy="0 0 1.55" xyz=".37 0 0.17"/>
    </visual>
  </link>
<link name="mount3">
    <visual>
      <geometry>
        <box size=".04 .04 .27"/>
      </geometry>
      <material name="black"/>
      <origin rpy="1.55 0 0" xyz=".37 0 0.28"/>
    </visual>
  </link>
  <joint name="base_to_mount" type="fixed">
    <parent link="base_link"/>
    <child link="mount1"/>
  </joint>
  <joint name="mount_to_vertical" type="fixed">
    <parent link="mount1"/>
    <child link="mount2"/>
  </joint>
  <joint name="vertical_to_t" type="fixed">
    <parent link="mount2"/>
    <child link="mount3"/>
  </joint>


<link name="fl">
    <visual>
      <geometry>
        <box size=".01 .01 .01"/>
      </geometry>
      <origin rpy="1.55 0.1 0.3" xyz=".37 0 0.3"/>
    </visual>
  </link>
<link name="ff">
    <visual>
      <geometry>
        <box size=".01 .01 .01"/>
      </geometry>
      <origin rpy="1.55 0.2 0.3" xyz=".37 0.1 0.3"/>
    </visual>
  </link>
<link name="fr">
    <visual>
      <geometry>
        <box size=".01 .01 .01"/>
      </geometry>
      <origin rpy="1.55 0.3 0.3" xyz=".37 -0.1 0.3"/>
    </visual>
  </link>

  <joint name="mount_to_fl" type="fixed">
    <parent link="mount3"/>
    <child link="fl"/>
  </joint>
  <joint name="mount_to_ff" type="fixed">
    <parent link="mount3"/>
    <child link="ff"/>
  </joint>
  <joint name="mount_to_fr" type="fixed">
    <parent link="mount3"/>
    <child link="fr"/>
  </joint>

<link name="arm">
    <visual>
      <geometry>
        <box size=".02 .02 .2"/>
      </geometry>
      <origin rpy="1.55 1.55 1.55" xyz=".5 -0.15  0.3"/>
    </visual>
  </link>

 <joint name="mount to arm" type="revolute">
    <parent link="mount3"/>
    <child link="arm"/>
    <axis xyz="0 0 1"/>
    <limit effort="1000.0" lower="0.0"  upper="0.548" velocity="0.5"/>
	   <origin rpy="0 0 0" xyz="0 0 0"/>
  </joint>

</robot>
